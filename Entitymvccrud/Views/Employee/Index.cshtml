@model IEnumerable<Entitymvccrud.Models.Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="content-wrapper">
    <div>
        <a class="btn btn-danger" href="/Employee/Create/">Create</a>
    </div>
    <h1>Show all </h1>
    <table id="example" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>

                <th>Mobile_no</th>
                <th>Address</th>
                <th>EmployeeDate</th>
                <th>Gender</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Employee in Model)
            {
            <tr>
                <td>@Employee.Id</td>
                <td>@Employee.Name</td>
                <td>@Employee.Email</td>

                <td>@Employee.Mobile_no</td>
                <td>@Employee.Address</td>

                <td>

                    @{
                        @Employee.EmployeeDate.ToString("MM/dd/yyyy");
                    }
                </td>
                <td>@Employee.Gender</td>
                <td>
                    <a asp-controller="Employee" asp-action="Update" asp-route-id="@Employee.Id" class="btn btn-warning">EDIT</a>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Employee.Id" class="btn btn-danger">Delete</a>

                </td>

            </tr>
            }
        </tbody>

    </table>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $.noConflict();
        var table = $('#example').DataTable({
            "order": [[0, "asc"]],
            stateSave: true,
            stateDuration: -1,
            "orderClasses": false,
            columnDefs: [
                
                {
                    "type": 'date',
                    'wireFormat': 'MM/dd/yyyy',
                    "targets": [5]
                },
            ],

        });

    });
</script>





